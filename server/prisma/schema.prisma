generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  username      String    @unique
  passwordHash  String
  createdAt     DateTime  @default(now())
  posts         Post[]
}

model Post {
  id          String    @id @default(uuid())
  title       String
  content     String
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])
  displayItem String    // JSON string for item details (type, color, textureUrl)
  likes       Int       @default(0)
  isPublic    Boolean   @default(true)
  createdAt   DateTime  @default(now())
}
